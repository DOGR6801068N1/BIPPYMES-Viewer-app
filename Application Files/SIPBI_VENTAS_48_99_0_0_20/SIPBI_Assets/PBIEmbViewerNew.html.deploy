<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Power BI Viewer</title>
    <script src="https://cdn.jsdelivr.net/npm/powerbi-client/dist/powerbi.js"></script>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
        }
        #toolbar {
            position: absolute;
            top: 10px;
            left: 10px;
            z-index: 1000;
        }
        #reportContainer {
            position: absolute;
            top: 50px;
            left: 0;
            right: 0;
            bottom: 0;
            overflow: hidden;
        }
        button {
            margin-right: 10px;
            padding: 8px 12px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div id="toolbar">
        <button onclick="resetFilters()">Resetear filtros</button>
        <button onclick="refreshReport()">Refrescar datos</button>
    </div>
    <div id="reportContainer"></div>

    <script>
        const models = window['powerbi-client'].models;
        let report;

        function renderReport() {
            const embedConfig = {
                type: 'report',
                id: '{REPORT_ID}',
                embedUrl: 'https://app.powerbi.com/reportEmbed?reportId={REPORT_ID}&groupId={GROUP_ID}',
                accessToken: '{EMBED_TOKEN}',
                tokenType: models.TokenType.Embed,
                settings: {
                    layoutType: models.LayoutType.Custom,
                    customLayout: {
                        displayOption: models.DisplayOption.FitToPage
                    },
                    panes: { filters: { visible: false } },
                    navContentPaneEnabled: true
                }
            };

            const container = document.getElementById('reportContainer');
            powerbi.reset(container);
            report = powerbi.embed(container, embedConfig);
        }

   function resetFilters() {
    if (report) {
        report.reset()
            .then(() => {
                console.log("Reporte reiniciado.");
                alert("¡Filtros reiniciados con éxito!");
            })
            .catch(err => {
                console.error("Error al resetear:", err);
                alert("Hubo un error al intentar resetear los filtros.");
            });
    }
}



        function refreshReport() {
            if (report) {
                report.refresh();
            }
        }

        renderReport();
    </script>
</body>
</html>
